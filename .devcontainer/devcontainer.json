{
  "hostRequirements": {
   "cpus": 4,
   "memory": "8gb",
   "storage": "32gb"
  },
	"name": "Go",
	"image": "mcr.microsoft.com/devcontainers/go",
  "features": {
    "ghcr.io/devcontainers-contrib/features/caddy": {},
    "ghcr.io/devcontainers/features/github-cli": {}
  },  
  "postAttachCommand": {
    "server": "caddy file-server --listen :3000"
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Caddy",
      "onAutoForward": "openPreview",
      "protocol": "http"
    }
  }
}
